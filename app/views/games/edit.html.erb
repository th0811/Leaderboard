<container class="text-center">
  <h1 class="m-3">Edit Page</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Winner</th>
        <th>Rating</th>
        <th> </th>
        <th>Rating</th>
        <th>Loser</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="align-middle">
          <% @game.winners.each do |winner| %>
            <%= link_to winner.user.name, winner.user %><br>
          <% end %>
        </td>
        <td class="align-middle">
          <% @game.winners.each do |winner| %>
            <%= format("%.2f", winner.user_rate) %><br>
          <% end %>
        </td>
        <td class="align-middle">vs</td>
        <td class="align-middle">
          <% @game.losers.each do |loser| %>
            <%= format("%.2f", loser.user_rate) %><br>
          <% end %>
        </td>
        <td class="align-middle">
          <% @game.losers.each do |loser| %>
            <%= link_to loser.user.name, loser.user %><br>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= form_with(model: @game, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :description, 'comment' %>
      <%= f.text_area :description, class: 'form-control', rows: 15 %>
    </div>
    <%= f.submit 'Post', data: { confirm: "入力データを送信して良いですか？" }, class: 'btn btn-primary btn-block' %>
  <% end %>
</container>