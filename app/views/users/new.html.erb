<div class="text-center">
  <h1>Create your Account</h1>
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
    
        <%= form_with(model: @user, local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          
          <div class="form-group row">
            <div class="col-sm-3"><%= f.label :name, 'User Name' %></div>
            <div class="col-sm-9"><%= f.text_field :name, class: 'form-control' %></div>
          </div>
    
          <div class="form-group row">
            <div class="col-sm-3"><%= f.label :email, 'Email' %></div>
            <div class="col-sm-9"><%= f.email_field :email, class: 'form-control' %></div>
          </div>
    
          <div class="form-group row">
            <div class="col-sm-3"><%= f.label :password, 'Password' %></div>
            <div class="col-sm-9"><%= f.password_field :password, class: 'form-control' %></div>
          </div>
    
          <div class="form-group row">
            <div class="col-sm-3"><%= f.label :password_confirmation, 'Confirmation' %></div>
            <div class="col-sm-9"><%= f.password_field :password_confirmation, class: 'form-control' %></div>
          </div>
    
          <%= f.submit 'Sign up', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
</div>