<container class="text-center">
  <section>
    <% if !logged_in? %>
        <%= link_to "you want to recored a match? plsease log in. ", login_path, class: 'btn btn-primary m-5' %>
    <% end %>
    <h1 class="m-3"><%= @user.name %>'s Profile</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Player Name</th>
          <th>Rating</th>
          <th>Wins</th>
          <th>Win Ratio</th>
          <th>Last Match</th>
        </tr>
      </thead>
      <tbody>
        <% if @user.wins + @user.losses == 0 %>
          <% ratio = 0 %>
        <% else %>
          <% ratio = @user.wins * 100 / (@user.wins + @user.losses) %>
        <% end %>
        <tr>
          <td><%= link_to @user.name,user_path(@user) %></td>
          <td><%= format("%.2f", @user.rating) %></td>
          <td><%= @user.wins %></td>
          <td><%= ratio%> %</td>
          <td><%= @user.updated_at.strftime('%Y-%m-%d %T') %></td>
        </tr>
      </tbody>
    </table>
  </section>
  <section>
    <h1 class="mt-5 mb-3"><%= @user.name %>'s Records</h1>
    <div><%= line_chart @data,min:1400 %></div>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th></th>
          <th>Winner</th>
          <th>Winner Rating</th>
          <th> </th>
          <th>Loser Rating</th>
          <th>Loser</th>
          <th>Matching Date</th>
        </tr>
      </thead>
      <tbody>
      <% @games.each do |game| %>
        <tr>
          <td class="align-middle"><%= link_to "Detail", game %></td>
          <td class="align-middle">
            <% game.winners.each do |winner| %>
              <%= link_to winner.user.name, winner.user %><br>
            <% end %>
          </td>
          <td class="align-middle">
            <% game.winners.each do |winner| %>
              <%= format("%.2f", winner.user_rate) %><br>
            <% end %>
          <td class="align-middle"> vs </td>
          <td class="align-middle">
            <% game.losers.each do |loser| %>
              <%= format("%.2f", loser.user_rate) %><br>
            <% end %>
          </td>
          <td class="align-middle">
            <% game.losers.each do |loser| %>
              <%= link_to loser.user.name, loser.user %><br>
            <% end %>
          </td>
          <td class="align-middle">
            <%= game.created_at.strftime('%Y-%m-%d %T') %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @games %>
  </section>
</container>